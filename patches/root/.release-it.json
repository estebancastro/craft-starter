{
    "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
    "git": {
        "tagName": "${version}",
        "commitMessage": "Finish ${version}",
        "requireCommits": true,
        "tagArgs": [
            "--sign"
        ]
    },
    "github": {
        "release": true,
        "releaseName": "${version}",
        "token": "$GITHUB_TOKEN"
    },
    "npm": {
        "publish": false,
        "skipChecks": true
    }
}
